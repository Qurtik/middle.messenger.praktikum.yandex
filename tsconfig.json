{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext","baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"sourceMap": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*.ts",
		".eslintrc.cjs"
	]
}
