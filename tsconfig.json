{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"lib": ["ESNext","DOM"],
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,

		"noImplicitAny": true,

		"outDir": "dist",
		"declaration": false,
		"strictNullChecks": true,
		"sourceMap": true
	}
}