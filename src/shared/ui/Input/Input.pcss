.display-data {
	border-bottom: 1px solid var(--border-color);
	display: flex;
	justify-content: space-between;
	line-height: 35px;
	width: 300px;
}

.display-data__label {
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	padding-right: 45px;
}

.display-data__value {
	color: #999;
	font-family: Verdana, Geneva, Tahoma, sans-serif;
}
