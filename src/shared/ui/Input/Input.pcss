.display-data {
	display: flex;
	justify-content: space-between;
	border-bottom: 1px solid var(--border-color);
	line-height: 35px;
	width: 300px;
}

.display-data__label {
	padding-right: 45px;
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
}

.display-data__value {
	color: #999999;
	font-family: Verdana, Geneva, Tahoma, sans-serif;
}
