.btn {
	appearance: none;
	background-color: var(--background-btn-color);
	border: 1px solid #fff;
	border-radius: 50px;
	box-shadow: 0 4px 6px rgb(65 132 144 / 15%), 0 1px 3px rgb(0 0 0 / 8%);
	color: var(--primary-color);
	cursor: pointer;
	font-size: 17px;
	height: max-content;
	margin: 5px auto;
	padding: 5px 15px;
	transition: box-shadow 0.2s;
	width: auto;
}

.btn:hover {
	box-shadow: 0 7px 14px rgb(65 132 144 / 50%), 0 3px 6px rgb(0 0 0 / 58%);
	transition: all 0.2s;
}

.btn:active {
	background-color: var(--background-btn-color);
	border-color: var(--primary-color);
}

.btn_size_s {
	font-size: 13px;
	height: 40px;
	width: 110px;
}

.btn_bg_color_green {
	background-color: var(--success-color);
	color: #716E6E;
}

.btn_bg_color_red {
	background-color: var(--light-red-color);
	color: #716E6E;
}
