.messageCard {
	background-color: var(--background-color);
	border: 2px solid var(--border-color);
	border-radius: 8px;
	justify-self: flex-end;
	margin: 15px;
	max-width: 80%;
	min-width: 120px;
	padding: 5px;
	width: max-content;
}

.messageCard__header {
	color: gray;
	font-size: small;
	text-align: right;
}

.messageCard__body{
	color: var(--text-color)
}

.messageCard__message-my {
	justify-self: flex-start;
}

.messageCard__footer {
	color: gray;
	font-size: small;
	text-align: right;
}
